<!DOCTYPE html>
<html>
  <head>
    <title>Recipe Details</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    />
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        padding: 20px;
      }
      css Copy code .recipe-container {
        background-color: #fff;
        border-radius: 5px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      .recipe-title {
        font-size: 28px;
        margin-bottom: 10px;
      }

      .recipe-image {
        display: block;
        margin: 0 auto;
        max-width: 400px;
        height: auto;
        border-radius: 5px;
        margin-bottom: 10px;
      }

      .recipe-summary {
        font-size: 16px;
        margin-bottom: 15px;
      }

      .dish-types {
        font-weight: bold;
        margin-bottom: 10px;
      }

      .instruction-step {
        margin-bottom: 20px;
      }

      .instruction-step-number {
        font-weight: bold;
        font-size: 18px;
        margin-bottom: 5px;
      }

      .ingredient-list,
      .equipment-list {
        margin-left: 20px;
        margin-bottom: 10px;
      }

      .no-equipment-required {
        font-style: italic;
        color: #888;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="recipe-container">
        <h1 class="recipe-title"><%- recipe.title %></h1>
        <img
          src="<%- recipe.image %>"
          alt="<%- recipe.title %>"
          class="recipe-image"
        />
        <p class="recipe-summary"><%- recipe.summary %></p>
        <p class="dish-types">Dish Types: <%- recipe.dishTypes.join(', ') %></p>
        less Copy code
        <h2>Instructions:</h2>
        <ol>
          <% recipe.analyzedInstructions[0].steps.forEach(function(step) { %>
          <li class="instruction-step">
            <div class="instruction-step-number">Step <%= step.number %>:</div>
            <%- step.step %> <% if (step.ingredients.length > 0) { %>
            <ul class="ingredient-list">
              <% step.ingredients.forEach(function(ingredient) { %>
              <li><%- ingredient.name %></li>
              <% }) %>
            </ul>
            <% } %> <% if (step.equipment.length > 0) { %>
            <ul class="equipment-list">
              <% step.equipment.forEach(function(equipment) { %>
              <li><%- equipment.name %></li>
              <% }) %>
            </ul>
            <% } else { %>
            <p class="no-equipment-required">No equipment required.</p>
            <% } %>
          </li>
          <% }) %>
        </ol>
      </div>
    </div>
  </body>
</html>
